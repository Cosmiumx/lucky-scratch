{
  "name": "lucky-scratch",
  "devDependencies": {
    "lerna": "^4.0.0"
  },
  "scripts": {
    "install": "lerna bootstrap",
    "dev": "lerna exec --scope=lucky-scratch -- npm run dev",
    "dev:vue": "lerna run --scope=lucky-scratch --scope=@lucky-scratch/vue dev --parallel",
    "dev:react": "lerna run --scope=lucky-scratch --scope=@lucky-scratch/react dev --parallel",
    "dev:uni": "",
    "dev:taro": "",
    "dev:mini": "",
    "build": "lerna run build --sort --stream",
    "update-version": "lerna version --conventional-commits --no-push --no-changelog --no-git-tag-version",
    "publish-to-npm": "lerna publish from-package --yes --no-git-reset --otp=000000",
    "publish-beta": "lerna publish --no-git-tag-version --dist-tag beta"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ]
}
